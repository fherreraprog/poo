{
    "name": "POO - Java 17 Sin Copilot",
    "image": "mcr.microsoft.com/devcontainers/java:0-17",
    "features": {
        "ghcr.io/devcontainers/features/java:1": {
            "version": "17",
            "installMaven": "true",
            "installGradle": "false"
        }
    },
    "customizations": {
        "vscode": {
            "settings": {
                "github.codespaces.defaultExtensions": [],
                "github.copilot.enabled": false,
                "chat.disableAIFeatures": true,
                "inlineChat.accessibleDiffView": "off",
                "terminal.integrated.initialHint": false,
                "projectManager.autoDetectJavaRuntime": false,
                "projectManager.autoDetectJavaProjects": false,
                "projectManager.autoDetectMavenProjects": false,
                "projectManager.autoDetectGradleProjects": false
            },
            "extensions": [
                "vscjava.vscode-java-pack"
            ]
        }
    }
}